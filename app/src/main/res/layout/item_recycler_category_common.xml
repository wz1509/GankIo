<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp">

        <TextView
            android:id="@+id/item_gank_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="可能是最好看的 Android 圆形 Menu 菜单效果。" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_gank_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/item_gank_desc"
            android:layout_marginTop="5dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_vector_category_android"
            android:tint="#26A69A" />

        <TextView
            android:id="@+id/item_gank_who"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_gank_icon"
            android:layout_alignTop="@id/item_gank_icon"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/item_gank_icon"
            android:gravity="center"
            android:textSize="12sp"
            tools:text="佚名" />

        <TextView
            android:id="@+id/item_gank_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_gank_who"
            android:layout_alignTop="@id/item_gank_who"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/item_gank_who"
            android:gravity="center"
            android:textSize="12sp"
            tools:text="2017-11-16 12:01:05" />

    </RelativeLayout>
</android.support.v7.widget.CardView>